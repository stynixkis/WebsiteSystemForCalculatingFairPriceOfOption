							@if (currentPutPrice != null)
							{
								<div class="col-md-6">
									<div class="card">
										<div class="card-header black-header">
											<h6 class="mb-0">Грек @greeks[4].Name для Put опциона</h6>
										</div>
										<div class="card-body">
											<div class="chart-container greek-chart">
												@if (selectedGreeksCount > 0)
												{
														<div class="chart-area">
															<PlotlyChart @bind-Config="configRhoOptionPut" @bind-Layout="layoutRhoOptionPut" @bind-Data="dataRhoOptionPut" @ref="chartRhoOprionPut" />
