		<div class="col-12">
			<div class="card">
				<div class="card-header black-header">
					<h5 class="mb-0">История изменения греков</h5>
				</div>
				<div class="card-body">
					<div class="mb-3">
						<h6>Выберите греки для отображения:</h6>
						<div class="d-flex flex-wrap gap-2">
							@foreach (var greek in greeks)
							{
								<div class="form-check">
									<input type="checkbox"
										   class="form-check-input"
										   @onclick="@(() => OnGreekSelectionChanged(greek))" />
									<label class="form-check-label greek-tooltip"
										   for="@greek.Name"
										   data-title="@(greek.Description)">
										@greek.Name
									</label>
								</div>
							}
						</div>
						<div class="mt-2">
							<small class="text-muted">Выбрано: @selectedGreeksCount</small>
						</div>
					</div>

					@if (greeks[0].IsSelected == true)
					{
						<!-- Объединенные графики греков -->
						<div class="row mb-4">
							<div class="col-md-6">
								<div class="card">
									<div class="card-header black-header">
										<h6 class="mb-0">Грек @greeks[0].Name для Call опциона</h6>
									</div>
									<div class="card-body">
										<div class="chart-container">
											@if (selectedGreeksCount > 0)
											{
													<div class="chart-area">
														<PlotlyChart @bind-Config="configDeltaOptionCall" @bind-Layout="layoutDeltaOptionCall" @bind-Data="dataDeltaOptionCall" @ref="chartDeltaOptionCall" />
													</div>
											}
											else
											{
												<span class="chart-placeholder">
													Выберите греки для отображения
												</span>
											}
										</div>
									</div>
								</div>
							</div>
							@if (currentPutPrice != null)
							{
								<div class="col-md-6">
									<div class="card">
										<div class="card-header black-header">
											<h6 class="mb-0">Грек @greeks[0].Name для Put опциона</h6>
										</div>
										<div class="card-body">
											<div class="chart-container greek-chart">
												@if (selectedGreeksCount > 0)
												{
