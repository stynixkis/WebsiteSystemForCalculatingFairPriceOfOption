@page "/more"
@inherits MoreAboutOptionModel
<PageTitle>Справедливая цена опциона. Метод Блэка-Шоулза. Подробности</PageTitle>
@rendermode InteractiveServer

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<h3 class="mb-4">Опцион: @OptionName</h3>
		</div>
	</div>

	<!-- Основная информация об опционе -->
	<div class="row mb-4">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header black-header">
					<h5 class="mb-0">Основные параметры</h5>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-12 mb-2">
							<strong>Цена исполнения (страйк):</strong> @(strikePrice)$
						</div>
						<div class="col-12 mb-2">
							<strong>Дата экспирации:</strong> @expirationDate.ToString("dd.MM.yyyy")
						</div>
						<div class="col-12 mb-2">
							<strong>Волатильность для Call-опциона:</strong> @callVolatility.ToString("F1")
						</div>
						<div class="col-12">
							<strong>Волатильность для Put-опциона:</strong> @putVolatility.ToString("F1")
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-6">
			<div class="card">
				<div class="card-header black-header">
					<h5 class="mb-0">Информация об активе</h5>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-12 mb-2">
							<strong>Актив:</strong> @assetId
						</div>
						<div class="col-12 mb-2">
							<strong>Текущая цена актива:</strong> @(currentAssetPrice)
						</div>
						<div class="col-12 mb-2">
							<strong>Тип актива:</strong> @(typeActive)
						</div>
						<div class="col-12 mb-2">
							<strong>Валюта:</strong> @(valuteActive)
						</div>
					</div>
				</div>
			</div>


			<div class="card mt-3">
				<div class="card-header black-header">
					<h5 class="mb-0">Текущие цены опционов</h5>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-12 mb-2">
							<strong>Текущая цена опциона Call: </strong> @(currentCallPrice)
						</div>
						<div class="col-12">
							@if (currentPutPrice == null)
							{
								<p><strong>Текущая цена опциона Put: </strong> не высчитывается </p>
							}
							else
							{
								<strong>Текущая цена опциона Put: </strong> @(currentPutPrice)
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Графики истории цен -->
	<div class="row mb-4">
		<!-- Call опцион -->
		<div class="col-md-6">
			<div class="card">
				<div class="card-header black-header">
					<h5 class="mb-0">История изменения цены опциона Call</h5>
				</div>
				<div class="card-body">
					<div class="chart-container">
						<div class="chart-area">
							<PlotlyChart @bind-Config="configCallOptionPrice" @bind-Layout="layoutCallOptionPrice" @bind-Data="dataOptionCall" @ref="chartCallOptionPrice" />
						</div>
					</div>
				</div>
			</div>
		</div> 
		<!-- Put опцион -->
		@if (currentPutPrice != null)
		{
			<div class="col-md-6">
				<div class="card">
					<div class="card-header black-header">
						<h5 class="mb-0">История изменения цены опциона Put</h5>
					</div>
					<div class="card-body">
						<div class="chart-container">
							<div class="chart-area">
								<PlotlyChart @bind-Config="configPutOptionPrice" @bind-Layout="layoutPutOptionPrice" @bind-Data="dataOptionPut" @ref="chartPutOptionPrice" />
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>

	<!-- Греки -->
